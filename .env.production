# Production Environment Configuration for QA Generator
# Copy this file to .env and configure the values below

# ================================
# SECURITY CONFIGURATION
# ================================

# API Authentication (REQUIRED for production)
# Generate a secure API key using: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
QA_GENERATOR_API_KEY=your_production_api_key_here

# Rate Limiting (requests per minute per IP)
RATE_LIMIT_PER_MINUTE=30

# ================================
# AI PROVIDER CONFIGURATION
# ================================

# Default AI Provider (qianfan|groq|openai)
AI_PROVIDER=qianfan

# QianFan Configuration (Baidu)
QIANFAN_ACCESS_KEY=your_qianfan_access_key
QIANFAN_SECRET_KEY=your_qianfan_secret_key

# Groq Configuration
GROQ_API_KEY=your_groq_api_key

# OpenAI Configuration
OPENAI_API_KEY=your_openai_api_key
OPENAI_BASE_URL=https://api.openai.com/v1

# ================================
# APPLICATION CONFIGURATION
# ================================

# Environment
NODE_ENV=production

# Server Configuration
PORT=3000
HOST=0.0.0.0

# Next.js Configuration
NEXTAUTH_URL=https://your-domain.com
NEXTAUTH_SECRET=your_nextauth_secret

# ================================
# WORKER CONFIGURATION
# ================================

# Worker Pool Settings
DEFAULT_WORKER_COUNT=10
MAX_WORKER_COUNT=50
WORKER_TIMEOUT_MS=300000

# Memory Management
MAX_MEMORY_MB=2048
GC_ENABLED=true

# ================================
# LOGGING & MONITORING
# ================================

# Log Level (error|warn|info|debug)
LOG_LEVEL=info

# Enable structured logging
STRUCTURED_LOGGING=true

# Security logging
SECURITY_LOGGING=true

# ================================
# DATABASE CONFIGURATION (Future)
# ================================

# PostgreSQL (when migrating from JSON files)
# DATABASE_URL=postgresql://username:password@localhost:5432/qa_generator

# Redis (for caching and session management)
# REDIS_URL=redis://localhost:6379

# ================================
# EXTERNAL SERVICES
# ================================

# Monitoring (optional)
# SENTRY_DSN=your_sentry_dsn
# NEW_RELIC_LICENSE_KEY=your_newrelic_key

# Health Check Configuration
HEALTH_CHECK_ENABLED=true
HEALTH_CHECK_ENDPOINT=/health

# ================================
# CORS & SECURITY HEADERS
# ================================

# Allowed Origins (comma-separated)
ALLOWED_ORIGINS=https://your-domain.com,https://admin.your-domain.com

# CORS Configuration
CORS_ENABLED=true

# Security Headers
SECURITY_HEADERS_ENABLED=true